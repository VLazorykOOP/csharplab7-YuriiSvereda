<Window x:Class="Lab7CharpWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab7CharpWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Name="PictureBox" Width="400" Height="400" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox Name="Memo" Width="400" Height="200" HorizontalAlignment="Left" VerticalAlignment="Bottom" AcceptsReturn="True" />
        <Button Name="StartButton" Content="Start" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Click="StartButton_Click" />
        <Button Name="StopButton" Content="Stop" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,40,0,0" Click="StopButton_Click" />
        <TextBox Name="IntervalTextBox" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,80,0,0" Text="1000" />

    </Grid>
</Window>
